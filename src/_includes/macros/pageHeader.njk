{% import "macros/navigation.njk" as nav %}

{% macro pageHeader(text, flairText) %}
    <header class = "pageHeader">
        {{ nav.navigation("/assets/images/logo.png", "main-nav") }}
        
        <section class = "pageHeader__contents">
            <h1>{{text}}<span class = "flair-color-1">{{flairText}}</span></h1>
        </section>
    </header>
{% endmacro %}